<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progressView="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.xiang.viewanim.view.comm.progressbar.CircleDotProgressBar
        android:id="@+id/circleDotProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="#94aac1"
        progressView:showMode="ALL"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circleDotProgressBar"
        android:textSize="30sp"
        android:text="NULL模式"/>






</RelativeLayout>