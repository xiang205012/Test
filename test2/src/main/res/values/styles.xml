<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:windowNoTitle">true</item>

        <!-- 引用自定义recyclerView item间的分割线 -->
        <!--<item name="android:listDivider">@drawable/recycler_item_divider</item>-->
    </style>


    <style name="textStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="Theme_Autio_Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item><!-- 不需要弹出时屏幕背景变暗 -->
    </style>

    <!-- popWindow进入退出动画 -->
    <style name="ImageLoader_dir_PopWindow">
        <item name="android:windowEnterAnimation">@anim/image_loader_dir_pop_show</item>
        <item name="android:windowExitAnimation">@anim/image_loader_dir_pop_dismiss</item>
    </style>

</resources>
