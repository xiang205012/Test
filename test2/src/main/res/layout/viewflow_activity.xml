<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/gridview_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gridview_item" />

    <TextView
        android:id="@+id/gridview_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="尚学堂碑石"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/gridview_item_image"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/gridview_item_image"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_below="@+id/gridview_item_text"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/gridview_item_image"
        android:layout_alignRight="@+id/gridview_item_image"
        android:orientation="horizontal"
        android:background="@drawable/price_bg">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="¥:779.0"
            android:textColor="#FF0000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/collect" />

    </LinearLayout>

</RelativeLayout>